<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/sub_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:buttonTint="@color/white"/>

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/sub_check"
        android:layout_alignTop="@+id/sub_check"
        android:layout_alignBottom="@+id/sub_check"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <ImageView
        android:id="@+id/sub_info"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_info"
        android:layout_alignStart="@+id/sub_title"
        android:layout_below="@+id/sub_title"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:foreground="?selectableItemBackground"/>

    <TextView
        android:id="@+id/sub_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/sub_info"
        android:layout_alignTop="@+id/sub_info"
        android:layout_alignBottom="@+id/sub_info"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="end"/>

</RelativeLayout>